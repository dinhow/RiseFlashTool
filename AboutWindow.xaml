<Window x:Class="RiseFlashTool.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sobre" Height="350" Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="#1E1E1E"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        BorderBrush="#444"
        BorderThickness="1">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="RiseFlashTool v1.0" Foreground="#2196F3" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center"/>
            <TextBlock Text="Hardware: Raspberry Pi Pico (pico-serprog)" Foreground="#888" FontSize="12" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" Background="#252526" CornerRadius="5" Padding="15" VerticalAlignment="Top">
            <StackPanel>
                <TextBlock Text="PINAGEM OBRIGATÓRIA" Foreground="#E0E0E0" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="GPIO" FontWeight="Bold" Foreground="#FF9800" Margin="5"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Pico Pin" FontWeight="Bold" Foreground="#FF9800" Margin="5"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Função" FontWeight="Bold" Foreground="#FF9800" Margin="5"/>
                    <Border Grid.Row="0" Grid.ColumnSpan="3" BorderBrush="#444" BorderThickness="0,0,0,1" Margin="0,0,0,5"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="GP0" Foreground="#FFF" Margin="5"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="Pin 1" Foreground="#FFF" Margin="5"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="CS" Foreground="#4CAF50" FontWeight="Bold" Margin="5"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="GP2" Foreground="#FFF" Margin="5"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="Pin 4" Foreground="#FFF" Margin="5"/>
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="SCK" Foreground="#2196F3" FontWeight="Bold" Margin="5"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="GP3" Foreground="#FFF" Margin="5"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="Pin 5" Foreground="#FFF" Margin="5"/>
                    <TextBlock Grid.Row="3" Grid.Column="2" Text="MOSI" Foreground="#2196F3" FontWeight="Bold" Margin="5"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="GP4" Foreground="#FFF" Margin="5"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" Text="Pin 6" Foreground="#FFF" Margin="5"/>
                    <TextBlock Grid.Row="4" Grid.Column="2" Text="MISO" Foreground="#2196F3" FontWeight="Bold" Margin="5"/>
                </Grid>
                
                <TextBlock Text="* GND deve ser conectado ao GND do Chip" Foreground="#F44336" FontSize="10" Margin="0,15,0,0" FontStyle="Italic"/>
            </StackPanel>
        </Border>

        <Button Grid.Row="2" Content="FECHAR" Click="BtnClose_Click" Background="#333" Foreground="White" BorderThickness="0" Height="30" Width="100" Margin="0,20,0,0"/>
    </Grid>
</Window>