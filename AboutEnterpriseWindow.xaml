<Window x:Class="RiseFlashTool.AboutEnterpriseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sobre" Height="400" Width="450"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="#1E1E1E"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        BorderBrush="#007ACC"
        BorderThickness="1">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="POSIFLASH TOOL" Foreground="#007ACC" FontWeight="Bold" FontSize="20" HorizontalAlignment="Left"/>
        </StackPanel>

        <Border Grid.Row="1" Background="#252526" CornerRadius="4" Padding="10" Margin="0,0,0,20" BorderBrush="#333" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Desenvolvido por:" Foreground="#888" FontSize="10"/>
                <TextBlock Text="Edmilson R. Cristenson da Silva" Foreground="#E0E0E0" FontWeight="SemiBold" FontSize="14" Margin="0,2,0,0"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2">
            <TextBlock Text="GUIA RÁPIDO DE UTILIZAÇÃO" Foreground="#AAA" FontWeight="Bold" FontSize="11" Margin="0,0,0,10"/>
            
            <TextBlock Text="1. Conecte o programador USB na máquina." Foreground="#CCC" Margin="0,0,0,5" TextWrapping="Wrap"/>
            <TextBlock Text="2. Aguarde a detecção automática da porta COM." Foreground="#CCC" Margin="0,0,0,5" TextWrapping="Wrap"/>
            <TextBlock Text="3. Clique em 'SELECIONAR ARQUIVO' e escolha a firmware." Foreground="#CCC" Margin="0,0,0,5" TextWrapping="Wrap"/>
            <TextBlock Text="4. Clique em 'GRAVAR FW' e aguarde a verificação." Foreground="#CCC" Margin="0,0,0,5" TextWrapping="Wrap"/>
            
            <TextBlock Text="⚠️ Nota: O sistema realiza validação automática de integridade após a gravação." 
                       Foreground="#FF9800" Margin="0,15,0,0" TextWrapping="Wrap" FontSize="11" FontStyle="Italic"/>
        </StackPanel>

        <Button Grid.Row="3" Content="FECHAR" Click="BtnClose_Click" 
                Background="#007ACC" Foreground="White" FontWeight="Bold"
                BorderThickness="0" Height="35" HorizontalAlignment="Stretch" Margin="0,20,0,0"/>
    </Grid>
</Window>